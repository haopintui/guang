.guess-item {
  background: #fff;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
          flex-direction: column;
  width: 48vw;
  padding-bottom: 10rpx;
  border-radius: 5px;
  margin: 10px 0.5vw;
}
.image-wrapper {
  width: 100%;
  height: 330rpx;
  border-radius: 3px;
  overflow: hidden;
}
.image-wrapper image {
    width: 100%;
    height: 100%;
    opacity: 1;
}
.title {
  font-size: 24rpx;
  color: #303133;
  line-height: 80rpx;
  padding: 0px 5px;
}
.item-box {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  padding: 5px 5px;
  background-color: #fff;
}
.item-box .title {
    font-size: 14px;
}
.item-box .coupon-money {
    font-size: 24rpx;
    color: #fa436a;
    line-height: 1;
    padding: 5px 10px;
    background: linear-gradient(90deg, #ff8873 0, #ff4f4f 100%);
    color: #FFF;
    border-radius: 3px;
}
.item-box .coupon-price {
    color: #fa436a;
}
.item-box .coupon-price .em {
      font-weight: 500;
      font-size: 32rpx;
}

