.item {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
          flex-direction: row;
  margin: 5rpx 0px;
  padding: 10rpx 10rpx;
  background: #fff;
}
.item .pic {
    height: 300rpx;
    width: 300rpx;
    position: relative;
}
.item .pic image {
      height: 300rpx;
      width: 300rpx;
}
.item .pic .top {
      position: absolute;
      top: 0;
      left: 0;
      color: #fff;
      font-size: 14px;
      width: 42px;
      padding-right: 11px;
      height: 20px;
      background: url(https://img.youdanhui.cn/cms_img/2019-08-30/5d68824803a51.png) no-repeat;
}
.item .content {
    -webkit-flex: 1;
            flex: 1;
    padding: 10rpx 10rpx;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
            flex-direction: column;
    font-size: 24rpx;
}
.item .content .item-box {
      display: -webkit-flex;
      display: flex;
      -webkit-flex-direction: row;
              flex-direction: row;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      margin: 5rpx 0px 10rpx;
      color: #999;
      font-size: 14px;
      color: #333;
}
.item .content .item-box .sales2h {
        font-size: 14px;
        color: #888;
}
.item .content .item-box .sales2h .em {
          color: #FF7800;
}
.item .content .item-box .price {
        font-size: 11px;
        color: #aaa;
}
.item .content .item-box .coupon-money {
        font-size: 24rpx;
        color: #fa436a;
        line-height: 1;
        padding: 5px 10px;
        background: linear-gradient(90deg, #ff8873 0, #ff4f4f 100%);
        color: #FFF;
        border-radius: 3px;
}
.item .content .item-box .coupon-price {
        color: #fa436a;
        font-style: normal;
        font-size: 12px;
}
.item .content .item-box .coupon-price .em {
          color: #FF2B22;
          font-size: 20px;
}
.item .content .item-box .qiang-btn {
        background: #fc3f78;
        background: linear-gradient(-90deg, #fc4d51, #fc3f78);
        border-radius: 100px;
        color: #fff;
        font-size: 14px;
        padding: 3px 15px;
        float: right;
        line-height: 23px;
        height: 25px;
}

